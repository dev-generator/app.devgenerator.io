---
name: Static Sidebar
description: Static Sidebar section
variables:
    navigation:
        - data
    labels:
        - data
---

<div class="hidden lg:flex lg:flex-shrink-0">
    <div class="flex flex-col w-64">
        <div class="flex flex-col flex-grow bg-light-blue-500 dark:bg-gray-800 pt-5 pb-4 overflow-y-auto">
            <div class="flex items-center flex-shrink-0 px-4">
                <img class="h-20 w-auto -mt-4 block dark:hidden" src="/assets/images/logo/Dev Generator Logo.png" alt="Dev Generator logo">
                <img class="h-20 w-auto -mt-4 hidden dark:block" src="/assets/images/logo/Dev Generator Logo White.png" alt="Dev Generator logo">
            </div>
            <nav data-controller="navigation" data-navigation-active-class="bg-purple-700 text-white"
                 data-navigation-inactive-class="text-gray-800 dark:text-gray-100 hover:text-white hover:bg-purple-500"
                 data-navigation-active-icon-class="text-white"
                 data-navigation-inactive-icon-class="text-gray-800 dark:text-gray-100 group-hover:text-gray-50"
                 class="mt-5 flex-1 flex flex-col divide-y divide-gray-800 dark:divide-gray-100 overflow-y-auto" aria-label="Sidebar">
                {% render "sidebar/menu", navigation: navigation %}
            </nav>
        </div>
        <div class="relative border-t border-gray-800 dark:border-gray-100 bg-light-blue-500 dark:bg-gray-800 p-4">
            {% render "main/socials", labels: labels, classes: "flex justify-center space-x-6" %}
        </div>
    </div>
</div>