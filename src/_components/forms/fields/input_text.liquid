---
name: Input Text
description: Input Text Field
variables:
    uniqueName:
        - string
    name:
        - string
    defaultValue:
        - string
    placeholder:
        - string
---

{% if uniqueName == null %}
    <input type="text" name="{{ name }}" value="{{ defaultValue }}" placeholder="{{ placeholder }}"
        class="shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md"/>
{% else %}
    <input type="text" id="{{ uniqueName }}" value="{{ defaultValue }}" placeholder="{{ placeholder }}"
        class="shadow-sm focus:ring-purple-500 focus:border-purple-500 block w-full sm:text-sm border-gray-300 rounded-md"/>
{% endif %}