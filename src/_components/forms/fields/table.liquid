---
name: Input Table
description: Input Table Section
variables:
    uniqueName:
        - string
    fields:
        - data
---

<div class="flex flex-col">
    <div class="-my-2 overflow-x-auto">
        <div class="py-2 align-middle inline-block min-w-full px-1">
            <div class="shadow overflow-hidden border-b border-gray-200 dark:border-gray-700 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200dark:divide-gray-700">
                    <thead>
                        <tr>
                            {% for field in fields %}
                                <th scope="col" class="px-2 py-3 bg-gray-50 dark:bg-gray-600 text-left text-xs font-medium text-gray-500 dark:text-gray-100 uppercase tracking-wider">
                                    {{ field.name }}
                                </th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody data-target="table.tbody" id="{{ uniqueName }}" class="bg-white dark:bg-gray-500 divide-y divide-gray-200 dark:divide-gray-700">
                        <tr>
                            {% for field in fields %}
                                {% if forloop.last %}
                                    <td class="py-3 pl-1.5 pr-3 whitespace-nowrap text-sm font-medium">
                                {% elsif forloop.first %}
                                    <td class="py-3 pl-3 pr-1.5 whitespace-nowrap text-sm font-medium">
                                {% else %}
                                    <td class="py-3 px-1.5 whitespace-nowrap text-sm font-medium">
                                {% endif %}
                                    {% render "forms/fields/input_text", name: field.uniqueName, placeholder: field.placeholder %}
                                </td>
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<template data-target="table.template" id="{{ uniqueName }}-template">
    <tr>
        {% for field in fields %}
            {% if forloop.last %}
                <td class="py-3 pl-1.5 pr-3 whitespace-nowrap text-sm font-medium">
            {% elsif forloop.first %}
                <td class="py-3 pl-3 pr-1.5 whitespace-nowrap text-sm font-medium">
            {% else %}
                <td class="py-3 px-1.5 whitespace-nowrap text-sm font-medium">
            {% endif %}
                {% render "forms/fields/input_text", name: field.uniqueName, placeholder: field.placeholder %}
            </td>
        {% endfor %}
    </tr>
</template>