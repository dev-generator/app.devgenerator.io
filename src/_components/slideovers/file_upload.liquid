---
name: File Upload
description: File Upload Slideover.
variables:
    labels:
        - data
---

<div data-slideover-name="file-upload" class="hidden fixed inset-0 overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
        <div class="opacity-0 absolute inset-0 bg-gray-500 bg-opacity-75 transition-opacity ease-in-out duration-500"></div>
        <section class="absolute inset-y-0 pl-16 max-w-full right-0 flex">
            <div class="translate-x-full w-screen max-w-md transform transition ease-in-out duration-500 sm:duration-700">
                <form class="h-full flex flex-col bg-white dark:bg-gray-700 shadow-xl">
                    <div class="flex-1 h-0 overflow-y-auto">
                        <div class="py-6 px-4 bg-purple-700 sm:px-6">
                            <div class="flex items-center justify-between">
                                <h2 id="slide-over-heading" class="text-lg font-medium text-white">
                                    {{ labels.title }}
                                </h2>
                                <div class="ml-3 h-7 flex items-center">
                                    <button data-action="click->slideover#close" data-slideover-target="file-upload" type="button" class="bg-purple-700 rounded-md text-gray-50 hover:text-white focus:outline-none focus:ring-2 focus:ring-white">
                                        <span class="sr-only">Close panel</span>
                                        {% render "icons/x", classNames: "h-6 w-6" %}
                                    </button>
                                </div>
                            </div>
                            <div class="mt-1">
                                <p class="text-sm text-gray-300">
                                    {{ labels.details }}
                                </p>
                            </div>
                        </div>
                        <div class="flex-1 flex flex-col justify-between">
                            <div class="divide-y divide-gray-200">
                                <div class="space-y-6 pt-6 pb-5 divide-y divide-gray-800 dark:divide-gray-100">
                                    <div class="px-4 sm:px-6 pb-6">
                                        <label for="document" class="block text-sm leading-5 font-medium text-gray-700 dark:text-gray-50">
                                            {{ labels.code_snippet_label }}
                                        </label>
                                        <div class="rounded-md shadow-sm">
                                            <textarea id="document" rows="6"
                                                class="block w-full shadow-sm sm:text-sm focus:ring-purple-500 focus:border-purple-500 border-gray-300 rounded-md"
                                                placeholder="{{ labels.code_snippet_placeholder }}"></textarea>
                                        </div>
                                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-300">
                                            {{ labels.code_snippet_helptext }}
                                        </p>
                                    </div>
                                    <div class="px-4 sm:px-6 pt-8">
                                        <div>
                                            <label class="block text-sm leading-5 font-medium text-gray-700">
                                                {{ labels.doc_upload_label }}
                                            </label>
                                            <div id="dropzone" class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-400 dark:border-gray-50 border-dashed rounded-md">
                                                <div class="text-center">
                                                    {% render "icons/photo_add", classNames: "mx-auto h-12 w-12 text-gray-400 dark:text-gray-50" %}
                                                    <p class="mt-1 text-sm text-gray-600 dark:text-gray-50">
                                                        <input id="file-hidden-input" type="file" class="hidden" accept="{{ labels.accept_docs }}"/>
                                                        <button id="upload-button" type="button" class="font-medium text-purple-500 hover:text-purple-700 dark:text-purple-500 dark:hover:text-purple-400 focus:outline-none focus:underline transition duration-150 ease-in-out">
                                                            {{ labels.doc_upload_button }}
                                                        </button>
                                                        {{ labels.doc_upload_button_subtitle }}
                                                    </p>
                                                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-50">
                                                        {{ labels.doc_upload_accepted_details }}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <ul id="gallery" class="flex flex-1 flex-wrap mt-7">
                                                <li id="empty" class="h-full w-full text-center flex flex-col justify-center items-center">
                                                    <img class="mx-auto w-32" src="https://user-images.githubusercontent.com/507615/54591670-ac0a0180-4a65-11e9-846c-e55ffce0fe7b.png" alt="no data" />
                                                    <span class="text-small text-gray-500 dark:text-gray-50">{{ labels.no_files_selected }}</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

<template id="file-template">
    <li class="block p-1 w-full sm:w-1/2 h-24">
        <article tabindex="0" class="group w-full h-full rounded-md elative bg-purple-500 relative shadow-sm">
            <img alt="upload preview" class="img-preview hidden w-full h-full sticky object-cover rounded-md bg-fixed" />
            <section class="flex flex-col rounded-md text-xs break-words w-full h-full z-20 absolute top-0 py-2 px-3 text-white">
                <h1 class="flex-1"></h1>
                <div class="flex">
                    <span class="p-1">
                        <i>{% render "icons/document_text", classNames: "fill-current w-4 h-4 ml-auto pt-1" %}</i>
                    </span>
                    <p class="p-1 pt-1.5 size text-xs"></p>
                    <button class="delete ml-auto focus:outline-none hover:bg-purple-700 p-1 rounded-md">
                        {% render "icons/trash", classNames: "pointer-events-none fill-current w-4 h-4 ml-auto" %}
                    </button>
                </div>
            </section>
        </article>
    </li>
</template>