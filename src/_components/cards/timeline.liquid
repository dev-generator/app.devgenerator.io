---
name: Timeline
description: Timeline Section.
variables:
    name:
        - string
    details:
        - string
    link:
        - string
    date:
        - string
    datetime:
        - string
    location:
        - string
---

<li>
    <article>
        <a href="{{ link }}" class="grid md:grid-cols-8 xl:grid-cols-9 items-start relative rounded-xl p-3 sm:p-5 xl:p-6 overflow-hidden hover:bg-white dark:hover:bg-gray-700">
            <h3 class="font-semibold text-gray-900 dark:text-gray-50 md:col-start-3 md:col-span-6 xl:col-start-3 xl:col-span-7 mb-1 ml-9 md:ml-0">
                {{ name }}
            </h3>
            <time datetime="{{ datetime }}" class="md:col-start-1 md:col-span-2 row-start-1 md:row-end-3 flex items-center font-medium mb-1 md:mb-0">
                {% if location == "top" %}
                    <svg viewBox="0 0 12 12" class="w-3 h-3 mr-6 overflow-visible text-purple-700">
                        <circle cx="6" cy="6" r="6" fill="currentColor"></circle>
                        <circle cx="6" cy="6" r="11" fill="none" stroke="currentColor" stroke-width="2"></circle>
                        <path d="M 6 18 V 500" fill="none" stroke-width="2" stroke="currentColor" class="text-purple-400"></path>
                    </svg>
                {% elsif location == "middle" %}
                    <svg viewBox="0 0 12 12" class="w-3 h-3 mr-6 overflow-visible text-purple-700">
                        <circle cx="6" cy="6" r="6" fill="currentColor"></circle>
                        <path d="M 6 -6 V -30" fill="none" stroke-width="2" stroke="currentColor" class="text-purple-400"></path>
                        <path d="M 6 18 V 500" fill="none" stroke-width="2" stroke="currentColor" class="text-purple-400"></path>
                    </svg>
                {% elsif location == "bottom" %}
                    <svg viewBox="0 0 12 12" class="w-3 h-3 mr-6 overflow-visible text-purple-700">
                        <circle cx="6" cy="6" r="6" fill="currentColor"></circle>
                        <path d="M 6 -6 V -30" fill="none" stroke-width="2" stroke="currentColor" class="text-purple-400"></path>
                    </svg>
                {% endif %}
                <span class="text-gray-900 dark:text-gray-50">{{ date }}<span>
            </time>
            <p class="md:col-start-3 md:col-span-6 xl:col-span-7 ml-9 md:ml-0 text-gray-600 dark:text-gray-400">
                {{ details }}
            </p>
        </a>
    </article>
</li>
