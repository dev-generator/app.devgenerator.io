---
name: Featured Card
description: Featured Card Section.
variables:
    name:
        - string
    details:
        - string
    uniqueName:
        - string
    fromColor:
        - string
    toColor:
        - string
    color:
        - string
    btnName:
        - string
    img:
        - string
    children:
        - data
---

<div data-controller="modal" data-modal-allow-close-value="true" data-modal-hide-class="hidden"
     data-modal-entering-class="ease-out duration-300" data-modal-leaving-class="ease-in duration-200"
     data-modal-to-background-class="opacity-100" data-modal-from-background-class="opacity-0"
     data-modal-to-view-class="opacity-100 translate-y-0 sm:scale-100"
     data-modal-from-view-class="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95">
    <section class="flex">
        <div class="w-full relative text-white overflow-hidden rounded-3xl flex shadow-lg">
            <div class="w-full flex md:flex-col bg-gradient-to-br from-{{ fromColor }} to-{{ toColor }}">
                <div class="sm:max-w-sm sm:flex-none md:w-auto md:flex-auto flex flex-col items-start relative p-6 xl:p-8">
                    <h2 class="text-xl font-semibold mb-2 text-shadow">{{ name }}</h2>
                    <p class="font-medium text-{{ color }}-100 text-shadow mb-4">{{ details }}</p>
                    <button data-action="click->modal#open" type="button"
                            class="mt-auto bg-{{ color }}-800 bg-opacity-50 hover:bg-opacity-75 transition-colors duration-200 rounded-xl font-semibold py-2 px-4 inline-flex">
                        {{ btnName }}
                    </button>
                </div>
                <div class="relative md:pl-6 xl:pl-8 hidden sm:block">
                    <img src="assets/images/{{ img }}.png" class="absolute top-6 left-6 md:static overflow-visible rounded-tl-lg"/>
                </div>
            </div>
        </div>
    </section>

    {% render "modal/modal", title: name, cards: children %}
</div>