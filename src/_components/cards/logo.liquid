---
name: Logo
description: Logo Section.
variables:
    name:
        - string
    logo:
        - string
    link:
        - string
    status:
        - string
    hasStatus:
        - boolean
---

{% if status == 'New' %}
    {% assign color = ' bg-lime-600 text-gray-50' %}
{% elsif status == 'Coming Soon' %}
    {% assign color = 'bg-purple-300 text-purple-600' %}
{% endif %}

<li class="flex">
    <a href="{{ link }}" class="dark:bg-gray-800 relative rounded-xl ring-1 ring-black dark:ring-white ring-opacity-5 shadow-md w-full pt-8 pb-6 px-6">
        <img class="h-12 max-w-full mx-auto mb-3" src="/assets/images/icons/{{ logo }}.svg" />
        {{ name }}
        {% if hasStatus %}
            <span class="absolute top-2 right-2 {{ color }} rounded-full text-xs py-0.5 px-2">
                {{ status }}
            </span>
        {% endif %}
    </a>
</li>