<!doctype html>
<html lang="en">
    <head>
        {% render "main/head", labels: site.metadata, title: page.title %}
    </head>

    <body class="h-screen flex overflow-hidden bg-gray-100 dark:bg-gray-900" data-controller="mobile">
        
        {% render "sidebar/mobile", navigation: site.data.navigation.main %}
        {% render "sidebar/static", navigation: site.data.navigation.main %}

        <div class="flex-1 overflow-auto focus:outline-none" tabindex="0">
            {% render "main/header" %}
            <main class="flex-1 relative pb-8 z-0 overflow-y-auto">
                {{ content }}
            </main>
            {% if page.footer %}
                {% render "main/footer", labels: site.metadata %}
            {% endif %}
        </div>
    </body>
</html>